<body>
    

<%-include("partials/navbar")%>
<div class="container">
    <br>
    
        
            <h1 class="text-center"><%=pergunta.titulo%></h1>
        
        
            <p class="text-center"><%=pergunta.texto%></p>
       
        
    
    
    <hr> 
    <form action="/responder" method="POST">
        <h5>Responda a pergunta do usuario</h5>
       
        <textarea class="form-control" name="corpo"></textarea>
        <input type="hidden" name="idPergunta" value="<%=pergunta.id%>">
        <button type="submit"  class="btn btn-danger mt-3">Responder</button>
    </form>
    <h3 class="mt-3">Respostas:</h3>
    <%respostas.forEach((resposta)=>{%>
       <div class="card">
           <div class="card-header bg-danger"></div>
           <div class="card-body">
            <p>resposta:<%=resposta.corpo%></p>
                 
           </div>
           
       </div>
       <br> 
      
       

    <%})%>
 </div>
</body>
 


